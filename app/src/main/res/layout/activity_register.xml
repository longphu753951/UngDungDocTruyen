<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTempreg"
    tools:context=".Register">


    <EditText
        android:id="@+id/txtMKC"
        android:layout_width="350dp"
        android:layout_height="54dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/et_bg"
        android:hint="@string/Reg_ins_pw2"
        android:inputType="textPassword"
        android:padding="16dp"
        android:textColorHint="@color/login_form_details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMK" />

    <EditText
        android:id="@+id/txtTenHienThi"
        android:layout_width="350dp"
        android:layout_height="54dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/et_bg"
        android:hint="@string/Reg_name"
        android:inputType="textPersonName"
        android:padding="16dp"
        android:textColorHint="@color/login_form_details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="350dp"
        android:layout_height="54dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/et_bg"
        android:hint="@string/Reg_email"
        android:inputType="textPersonName"
        android:padding="16dp"
        android:textColorHint="@color/login_form_details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_tenTK" />

    <EditText
        android:id="@+id/txt_tenTK"
        android:layout_width="350dp"
        android:layout_height="54dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/et_bg"
        android:hint="@string/Reg_id"
        android:inputType="textPersonName"
        android:padding="16dp"
        android:textColorHint="@color/login_form_details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTenHienThi" />

    <EditText
        android:id="@+id/txtMK"
        android:layout_width="350dp"
        android:layout_height="54dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/et_bg"
        android:hint="@string/Reg_ins_pw"
        android:inputType="textPassword"
        android:padding="16dp"
        android:textColorHint="@color/login_form_details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEmail" />

    <Button
        android:id="@+id/buttonDangKy"
        android:layout_width="350dp"
        android:layout_height="54dp"
        android:layout_marginBottom="30dp"

        android:background="@drawable/btn_bg"
        android:text="@string/Reg"
        android:textAllCaps="false"
        android:textColor="@color/login_form_details_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>