<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#4F60B9" />
                    <corners android:radius="2dp" />
                </shape>
            </item>
            <item android:bottom="10px" android:left="10px" android:right="10px" android:top="10px">
                <shape android:shape="rectangle">
                    <corners android:radius="2dp" />
                    <gradient android:angle="45" android:centerX="35%" android:endColor="#A82CA0" android:startColor="#236BE8" android:type="linear" />
                    <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
                    <size android:width="270dp" android:height="60dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>